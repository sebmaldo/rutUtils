{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "globals": {
        "Promise": true
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha" : true
    },
    "rules": {
        "no-cond-assign": [2, "always"],
        "no-console": 1,
        "no-constant-condition": 2,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-character-class": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-inner-declarations": [2, "both"],
        "no-invalid-regexp": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 2,
        "valid-typeof": 2,
        "no-unexpected-multiline": 2,
        "block-scoped-var": 2,
        "complexity": [2, 20],
        "consistent-return": 2,
        "curly": [2, "all"],
        "default-case": 2,
        "dot-location": [2, "property"],
        "eqeqeq": [2, "smart"],
        "guard-for-in": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-div-regex": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": [2, {
            "boolean": true,
            "number": true,
            "string": true
        }],
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-octal-escape": 2,
        "no-octal": 2,
        "no-param-reassign": [2, {
            "props": false
        }],
        "no-proto": 2,
        "no-redeclare": [2, {
            "builtinGlobals": true
        }],
        "no-return-assign": [2, "always"],
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unused-expressions": 2,
        "no-useless-call": 2,
        "no-void": 2,
        "no-with": 2,
        "vars-on-top": 2,
        "wrap-iife": [2, "any"],
        "yoda": [2, "always", {
            "exceptRange": false,
            "onlyEquality": false
        }],
        "strict": [2, "global"],
        "init-declarations": [2, "always"],
        "no-catch-shadow": 2,
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-shadow-restricted-names": 2,
        "no-shadow": [2, {
            "builtinGlobals": false,
            "hoist": "all"
        }],
        "no-undef-init": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-use-before-define": [2, "nofunc"],
        "callback-return": [2, ["callback", " cb", " next"]],
        "handle-callback-err": [2, "err, error"],
        "no-mixed-requires": [2, false],
        "no-new-require": 2,
        "array-bracket-spacing": [2, "never", {
            "singleValue": false,
            "objectsInArrays": false,
            "arraysInArrays": false
        }],
        "brace-style": [2, "stroustrup", {
            "allowSingleLine": false
        }],
        "camelcase": [2, {
            "properties": "never"
        }],
        "comma-spacing": [2, {
            "after": true
        }],
        "comma-style": [2, "last"],
        "consistent-this": [2, "self"],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "max-nested-callbacks": [2, 4],
        "new-cap": [2, {
            "newIsCap": false,
            "capIsNew": false
        }],
        "new-parens": 2,
        "no-lonely-if": 2,
        "no-nested-ternary": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": [2, {
            "skipBlankLines": true
        }],
        "no-unneeded-ternary": 2,
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "constructor-super": 2,
        "generator-star-spacing": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-this-before-super": 2,
        "prefer-spread": 2,
        "require-yield": 2,
        "max-depth": [2, 7],
        "max-len": [2, 100, {
            "ignoreComments": true,
            "ignoreUrls": true
        }],
        "max-params": [2, 5],
        "max-statements": [2, 40],
        "max-statements-per-line" : [2, {
            "max" : 1
        }],
        "max-lines" : [2, 400],
        "require-jsdoc": [2, {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": true,
                "ClassDeclaration": true,
                "ArrowFunctionExpression": false
            }
        }],
        "no-dupe-class-members" : 2,
        "no-duplicate-imports" : 2,
        "no-useless-constructor" : 2,
        "no-useless-rename" : 2,
        "prefer-rest-params" : 2,
        "prefer-template" : 2,
        "no-prototype-builtins" : 2,
        "no-template-curly-in-string" : 2,
        "no-unsafe-finally" : 2,
        "no-unsafe-negation" : 2,
        "array-callback-return" : 2,
        "no-case-declarations" : 2,
        "no-empty-function" : 2,
        "no-empty-pattern" : 2,
        "no-extra-label" : 2,
        "no-global-assign" : 2,
        "no-self-assign" : 2,
        "no-unused-labels" : 2,
        "no-useless-concat" : 2,
        "no-useless-escape" : 2,
        "no-useless-return" : 2
    }
}